<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserApi</servlet-name>
        <servlet-class>app.controller.User</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserApi</servlet-name>
        <url-pattern>/v1/user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SignApi</servlet-name>
        <servlet-class>app.controller.Sign</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignApi</servlet-name>
        <url-pattern>/v1/sign</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BillApi</servlet-name>
        <servlet-class>app.controller.Bill</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BillApi</servlet-name>
        <url-pattern>/v1/bill</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VcApi</servlet-name>
        <servlet-class>app.controller.Verification</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VcApi</servlet-name>
        <url-pattern>/v1/vc</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BankCardApi</servlet-name>
        <servlet-class>app.controller.Card</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BankCardApi</servlet-name>
        <url-pattern>/v1/card</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BalanceApi</servlet-name>
        <servlet-class>app.controller.Balance</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BalanceApi</servlet-name>
        <url-pattern>/v1/balance</url-pattern>
    </servlet-mapping>
</web-app>